<div class="container">
    <div class="jumbotron">
        <h3><%= @post.title %></h3>
        <p style="font-size: 1em;"><%= @post.content %></p>
        <p class="buttons">
          <%= link_to 'Edit', edit_post_path(@post) %><%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %><%= link_to 'Home', root_path %>
        </p>
        <div class="jumbotron">
        <h2><%= @post.comments.count %> Comments </h2>
        <%= render @post.comments %>
        <h2> Add a comment </h2>
        <%= render "comments/form" %>



        </div>
    </div>
</div>
